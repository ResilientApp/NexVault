{
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module",
    "persistent": true
  },
  "icons": {
    "128": "nexvault_icon.png"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "manifest_version": 3,
  "name": "nexvault",
  "options_page": "src/options/index.html",
  "permissions": [
    "storage",
    "activeTab",
    "http://localhost/*",
    "tabs",
    "scripting"
  ],
  "version": "1.0.0",
  "web_accessible_resources": [
    {
      "matches": [
        "*://*/*"
      ],
      "resources": [
        "src/content-script/index.ts"
      ]
    }
  ]
}
